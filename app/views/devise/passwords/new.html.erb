<h2><%= t(".title") %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { method: :post, class: "well" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <div class="controls">
  <%= f.submit t(".submit"), class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
