<!-- Modal Sign up -->
<div id="sign" class="modal hide fade modal_login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Registre-se</h3>
  </div>
  
  <div class="modal-body"> 

    <%= form_for("user", :url => registration_path("user")) do |f| %>
    
    <div class="control-group">
      <label class="control-label" for="inputNome">Nome</label>
      <div class="controls">
        <%= f.text_field :nome, :class => "input-xlarge" %>
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="inputEmail">Email</label>
      <div class="controls">
        <%= f.text_field :email, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputPassword">Senha</label>
      <div class="controls">
        <%= f.password_field :password, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputPassword">Senha Novamente</label>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls pull-right">
        <button class="btn btn-link" data-dismiss="modal" aria-hidden="true">Cancelar</button>
        <%= f.submit 'Registrar', :class => "btn btn-success btn-medium" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<!-- end modal sign up -->