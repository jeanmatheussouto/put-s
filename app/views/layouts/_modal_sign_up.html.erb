
    <%= form_for("user", :url => registration_path("user")) do |f| %>
    <div class="control-group">
      <label class="control-label" for="inputNome">Nome</label>
      <div class="controls">
        <%= f.text_field :nome, :class => "input_sign" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputEmail">Email</label>
      <div class="controls">
        <%= f.text_field :email, :class => "input_sign" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputPassword">Senha</label>
      <div class="controls">
        <%= f.password_field :password, :class => "input_sign" %>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'Registrar', :class => "btn btn-success input_sign" %>
      </div>
    </div>
    <% end %>
